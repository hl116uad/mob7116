<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- HEADER FIX DI ATAS -->
    <TextView
        android:id="@+id/tvDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Detail"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#4CAF50"
        android:textColor="@android:color/black" />

    <!-- SCROLLVIEW UNTUK KONTEN -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- COVER FULL WIDTH + PADDING -->
            <ImageView
                android:id="@+id/imgDetailCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="0dp" />

            <!-- CONTENT DENGAN PADDING -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Title" />

                <TextView
                    android:id="@+id/txtDetailOriginalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Original Title" />

                <TextView
                    android:id="@+id/txtDetailRelease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Release Date" />

                <TextView
                    android:id="@+id/txtDetailDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/txtDetailPages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
